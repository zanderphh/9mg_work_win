<Window x:Class="_9M.Work.ProjectRelease.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_9M.Work.ProjectRelease"
        mc:Ignorable="d"
        Title="项目发布器" Height="150" Width="525" ResizeMode="NoResize" >
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label>项目路径</Label>
                <TextBox IsEnabled="False" Width="400" Name="tb_path"></TextBox>
                <Button Margin="20,0,0,0" Click="Button_Click" >选择</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Width="160" Height="40" Click="Button_Click_1">选择指定的文件发布</Button>
                <Button Width="100" Height="40" Margin="40,0,0,0" Click="Button_Click_2">一键发布</Button>
            </StackPanel>
            <Label Foreground="Red" Margin="0,5,0,0">请确定生成完成后发布</Label>
        </StackPanel>
    </Grid>
</Window>
