             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Style="{StaticResource DialogViewStyle}">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label HorizontalAlignment="Center" FontWeight="Bold" FontSize="15">客服名单</Label>
            <TextBox Height="200" Width="80"  TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Grid.Row="1" Name="Tb_Kefu"  />
            <WrapPanel HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="确定" Style="{DynamicResource AccentedSquareButtonStyle}" Click="Button_Click" Tag="0"></Button>
                <Button Content="取消" Style="{DynamicResource AccentedSquareButtonStyle}" Click="Button_Click" Tag="1"></Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
