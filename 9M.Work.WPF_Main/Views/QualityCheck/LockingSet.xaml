<UserControl x:Class="_9M.Work.WPF_Main.Views.QualityCheck.LockingSet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Style="{StaticResource DialogViewStyle}" >
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label FontWeight="Bold">时间间隔：</Label>
                <TextBox Width="70" Name="Tb_value"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="确定" Style="{DynamicResource AccentedSquareButtonStyle}" Margin="0,0,10,0" Click="Button_Click" Tag="0"></Button>
                <Button Content="取消" Style="{DynamicResource AccentedSquareButtonStyle}" Click="Button_Click" Tag="1"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
