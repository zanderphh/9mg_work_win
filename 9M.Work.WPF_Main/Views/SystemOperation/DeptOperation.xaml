<UserControl x:Class="_9M.Work.WPF_Main.Views.SystemOperation.DeptOperation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
           Style="{StaticResource DialogViewStyle}" Height="130" Width="200">
    <Grid>
        <WrapPanel Orientation="Vertical">
        <WrapPanel>
            <Label Content="部门名称"></Label>
            <TextBox Width="100" Name="Tb_Dept"></TextBox>
        </WrapPanel>
        <WrapPanel HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="确定" Style="{StaticResource ButtonBlackStyle}" Height="20" Margin="0,0,10,0" Click="Button_Click" Tag="0" Background="#41B1E1"></Button>
                <Button Content="取消" Style="{StaticResource ButtonBlackStyle}" Height="20" Click="Button_Click" Tag="1" Background="#41B1E1"></Button>
            </WrapPanel>
        </WrapPanel>
    </Grid>
</UserControl>
