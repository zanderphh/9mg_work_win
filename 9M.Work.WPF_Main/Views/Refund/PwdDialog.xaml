<Window x:Class="_9M.Work.WPF_Main.Views.Refund.PwdDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="输入口令" Height="120" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Margin="0 5 0 0">
            <TextBlock Grid.Row="0" Text="输入验证密码" FontSize="14" Margin="20 0 0 0" Width="90" HorizontalAlignment="Left"></TextBlock>
            <Button Content="取消" Width="40" Margin="125 0 0 0" Click="Button_Click"></Button>
        </StackPanel>
        <PasswordBox Width="260" Grid.Row="1" Height="40" Style="{StaticResource PasswordBoxStyle}" Name="txtPwd" VerticalContentAlignment="Center" KeyDown="TextBox_KeyDown" Margin="0 10 0 0">
            
        </PasswordBox>
    </Grid>
</Window>
